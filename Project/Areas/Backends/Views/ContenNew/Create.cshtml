@model Project.Models.Database.ContenNew

@{
    ViewBag.Title = "Create";
}






<section class="content-header">
    <h1>
        Bài viết

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Thêm bài viết</a></li>

    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Article
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Create", "ContenNew", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-12">
                                        @Html.ValidationSummary(true)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Danh mục </label>
                                                <div class="form-group">
                                                    @Html.DropDownList("CategoryID", null, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.CategoryID)
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Tên bài viết</label>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control Changetitle" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.Name)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Alias</label>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control slug" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.MetaTitle)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>SEO Keyword</label>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.MetaKeywords, new { @class = "form-control" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.MetaKeywords)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>SEO Description</label>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.MetaDescriptions, new { @class = "form-control", @Style = "height:120px" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.MetaDescriptions)</span>
                                                </div>
                                            </div>
                                        </div>


                                    </div>

                                    <div class="col-lg-6">


                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Mô tả ngắn</label>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @Style = "height:120px" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.Description)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Người đăng bài</label>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Administrator.FullName, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Administrator.FullName)
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Ngày đăng </label>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control", @Value = @ViewBag.Date })
                                                    @Html.ValidationMessageFor(model => model.CreatedDate)
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label>Trạng thái: </label>
                                                    <div>
                                                        <label class="checkbox-inline">
                                                            @Html.CheckBoxFor(m => m.Status, new { @checked = "checked" }) Hiển thị
                                                        </label>

                                                        <label class="checkbox-inline">
                                                            @Html.CheckBoxFor(m => m.TopHot) Nổi bật
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Ảnh đại diện </label>
                                                <div class="form-group">
                                                    <input type="file" name="Image">
                                                    <span class="err">@Html.ValidationMessageFor(model => model.Image)</span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-lg-12">

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label>Nội dung bài viết</label>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.Detail, new { @class = "form-control ckeditor" })
                                                    <span class="err">@Html.ValidationMessageFor(model => model.Detail)</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions no-color" style="margin-top:30px">
                                            <input type="submit" value="Thêm mới" class="btn btn-primary btn-default" />
                                            @Html.ActionLink("Trở về danh sách", "Index")
                                        </div>
                                    </div>


                                </div>

                            }
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->

            </div>








        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts{
    <script src="/Content/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('.ckeditor');
    </script>

    <script>
        function BrowseServer(functionData, startupPath) {
            var finder = new CKFinder();
            finder.basePath = '/Content/ckfinder';
            finder.startupPath = startupPath;
            finder.selectActionFunction = SetFileField;
            finder.selectActionData = functionData;
            finder.popup();
        }

        function SetFileField(fileUrl, data) {
            document.getElementById(data["selectActionData"]).value = fileUrl;
        }
    </script>
}

