@{
    ViewBag.Title = "Index";
}

<h2 style="padding-top:15px;">
    <a href="/Backends/Administrator/Index">
        Cấp quyền cho người dùng <b style="color:blue;">@ViewBag.usergrant</b>
    </a>
</h2>
<hr />
<div id="msg"></div>
<div class="col-md-4">
    <h4>Danh sách nghiệp vụ</h4>
    @Html.DropDownList("businessController", (IEnumerable<SelectListItem>)ViewBag.items, new { size = 20,@style="width:200px;", onchange = "getPermissions('/GrantPermissions/getPermissions/' + this.value,'" + Session["usergrant"] + "');" })
</div>
<div class="col-xs-4 col-md-4">
    <h4>Danh sách quyền hạn</h4>
    <div id="listaction"></div>

</div>

<script>
    function getPermissions(action,usergrant)
    {
        $.ajax({
            method: "GET",
            url: action,
            data: { usertemp: usergrant },
            success: function (data) {
                $('#listaction').html('');
                $.each(data, function (index, value) {
                    if (value.IsGranted)
                        $('#listaction').append("<input type ='CheckBox' checked onchange ='updatePermission(" + "\"/GrantPermissions/updatePermission/\"+this.value,\"@Session["usergrant"]\")' value ='" + value.PermissionId + "'>" + value.Description + "<br>");
                    else
                        $('#listaction').append("<input type ='CheckBox'  onchange ='updatePermission(" + "\"/GrantPermissions/updatePermission/\"+this.value,\"@Session["usergrant"]\")' value ='" + value.PermissionId + "'>" + value.Description + "<br>");
                });
            }
        })
    }
    function updatePermission(action, usergrant)
    {
        $.ajax({
            method: "GET",
            url: action,
            data: { usertemp: usergrant },
            success: function (data) {
                $("#msg").html(data);
            }
        })
    }
</script>

