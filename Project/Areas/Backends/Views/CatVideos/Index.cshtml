@model IEnumerable<Project.Models.Database.CatVideo>

@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Chủ đề bài viết

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Chủ đề bài viết</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-primary">

                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="box">
                        <div class="box-body">
                            <!-- Main content -->
                            <section class="content">
                                <div class="row">
                                    <div class="col-xs-12" id="ajax_content">
                                        <div class="row mgb10">
                                            <div class="col-lg-8">
                                                @Html.ActionLink("Thêm mới", "Create", new { }, new { @class = "btn btn-success" })
                                                <input type="submit" value="Cập nhật thứ tự" class="btn btn-outline btn-success " />
                                            </div>

                                            <div class="col-lg-4">

                                                <select id="slt_an" class="form-control">
                                                    <option value="1">Hiển thị các cấp</option>
                                                    <option value="0">Hiển thị danh mục gốc</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="box">
                                            @using (Html.BeginForm("UpdateOrder", "ArticleCat"))
                                            {
                                            <!-- /.box-header -->
                                                <div class="box-body">
                                                    <table class="table table-bordered table-striped" id="dataTables-example">
                                                        <thead>
                                                            <tr>
                                                                <th>Thứ tự</th>
                                                                <th>Name</th>
                                                                <th>CatAlias</th>
                                                                <th>Trạng thái</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @foreach (var item in Model)
                                                            {
                                                                int order = -1;
                                                                <tr>
                                                                    <td style="width:10%">
                                                                        <input type="hidden" name="OrderList[@order].Id" value="@item.ID" />
                                                                        <input type="number" required name="OrderList[@order].Order" class="form-control text-center" data_val_number="Vui lòng nhập kiểu số!" value="@item.DisplayOrder" />

                                                                    </td>
                                                                    <td>
                                                                        @if (item.CatDepth == 1)
                                                                        {   @:---
                                                                                                            }
                                                                        else if (item.CatDepth == 2)
                                                                        {   @:------
                                                                                                            }
                                                                        else if (item.CatDepth == 3)
                                                                        {    @:------
                                                                                                        }
                                                                        @Html.DisplayFor(modelItem => item.Name)
                                                                    </td>
                                                                    <td>@Html.DisplayFor(modelItem => item.MetaTitle)</td>
                                                                    <td>
                                                                        @if (item.Status == true)
                                                                        {
                                                                            <span><small class="label bg-green">kích hoạt</small></span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span><small class="label bg-red">Chưa kích hoạt</small></span>
                                                                        }

                                                                    </td>
                                                                    <th>

                                                                        <a onclick="return confirm('ban có muốn xóa tên' + '&nbsp;' + '@item.Name')" class="btn btn-danger btn-sm" href="@Url.Action("Xoabaiviet", "CatVideos", new { id = item.ID })"><i class="fa fa-trash-o"></i></a>
                                                                        <a class="btn btn-success btn-sm" href="/Backends/CatVideos/Edit/@item.ID"><i class="fa fa-reply"></i></a>
                                                                    </th>
                                                                </tr>
                                                            }
                                                        </tbody>

                                                    </table>
                                                </div>
                                            }
                                            <!-- /.box-body -->
                                        </div>
                                        <!-- /.box -->
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </section>
                            <!-- /.content -->



                        </div>
                        <!-- /.box-body -->
                    </div>

                    <!-- /.mail-box-messages -->
                </div>
                <!-- /.box-body -->
            </div>

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $('#dataTables-example').DataTable({
                responsive: true,
                "bLengthChange": false,
                bFilter: false
            });


        });


        $("select#slt_an").change(function () {
            var selectedTemplate = $("select#slt_an").val();
            if (selectedTemplate) {

                $.ajax({
                    url: '@Url.Action("IndexFilter", "CatVideos")',
                    type: 'GET',
                    data: { status: selectedTemplate },
                    cache: false,
                    success: function(data) {
                        $('#ajax_content').html(data);
                        $('#dataTables-example').DataTable({
                            responsive: true
                        });
                    }
                });
            }
        });

    </script>
}