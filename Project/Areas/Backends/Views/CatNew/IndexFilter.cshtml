@model IEnumerable<Project.Models.Database.CatNew>
@{
    ViewBag.Title = "IndexFilter";
    Layout = null;
    int order = -1;
}

<div class="panel-body">

    <div class="dataTable_wrapper">


        <table class="table table-striped table-bordered table-hover tbl_order" id="dataTables-example">
            <thead>
                <tr>
                    <th style="width:10%" class="center_td">
                        Thứ tự
                    </th>

                    <th>
                        Tên danh mục
                    </th>
                    <th style="width:20%">
                        Alias
                    </th>
                    <th class="center_td" style="width:15%">
                        Trạng thái
                    </th>
                    <th style="width:10%" class="center_td">
                        Cấp
                    </th>


                    <th style="width:15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    order++;
                    <tr>
                        <td style="width:10%">
                            <input type="hidden" name="OrderList[@order].Id" value="@item.ID" />
                            <input type="number" required name="OrderList[@order].Order" class="form-control text-center" data_val_number="Vui lòng nhập kiểu số!" value="@item.DisplayOrder" />

                        </td>
                        <td>
                            @if (item.CatDepth == 1)
                            {   @:---
                                                                                                            }
                            else if (item.CatDepth == 2)
                            {   @:------
                                                                                                            }
                            else if (item.CatDepth == 3)
                            {    @:------
                                                                                                        }
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.MetaTitle)</td>
                        <td>
                            @if (item.Status == true)
                            {
                                <span><small class="label bg-green">kích hoạt</small></span>
                            }
                            else
                            {
                                <span><small class="label bg-red">Chưa kích hoạt</small></span>
                            }

                        </td>
                        <th>

                            <a onclick="return confirm('ban có muốn xóa tên' + '&nbsp;' + '@item.Name')" class="btn btn-danger btn-sm" href="@Url.Action("Delete", "CatNew", new { id = item.ID })"><i class="fa fa-trash-o"></i></a>
                            <a class="btn btn-success btn-sm" href="/Backend/CatNew/Edit/@item.ID"><i class="fa fa-reply"></i></a>
                        </th>
                    </tr>
                }
            </tbody>

        </table>


    </div>
    <!-- /.table-responsive -->
</div>

